<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		padding: 32px;
		text-align: center;
	}

	.profile {
		margin-bottom: 2rem;
	}

	.avatar {
		margin-bottom: 1rem;
		display: flex;
		justify-content: center;
	}

	.avatar img {
		border-radius: 50%;
		object-fit: cover;
		border: 3px solid rgba(255, 255, 255, 0.8);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
	}

	h1 {
		font-size: 2.5rem;
		margin: 0.5rem 0 0.25rem;
		color: #111827;
		font-weight: 600;
	}

	.description {
		color: #6b7280;
		font-size: 1.125rem;
		margin: 0;
		line-height: 1.6;
	}

	#social-links {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 12px 20px;
		color: #111827;
		text-decoration: none;
		background: rgba(255, 255, 255, 0.9);
		border-radius: 12px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		transition: all 0.2s ease;
		backdrop-filter: blur(10px);
		font-weight: 500;
		min-width: 120px;
		justify-content: center;
	}

	.social-link:hover {
		background: rgba(255, 255, 255, 1);
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
		color: #3245ff;
	}

	.social-link svg {
		flex-shrink: 0;
	}

	.social-info {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 12px 20px;
		color: #111827;
		background: rgba(255, 255, 255, 0.9);
		border-radius: 12px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(10px);
		font-weight: 500;
		min-width: 120px;
		justify-content: center;
	}

	.social-info svg {
		flex-shrink: 0;
	}

	@media screen and (max-width: 768px) {
		#hero {
			padding: 20px;
		}

		h1 {
			font-size: 2rem;
		}

		.description {
			font-size: 1rem;
		}

		#social-links {
			flex-direction: column;
			align-items: center;
			gap: 0.75rem;
		}

	.social-link,
	.social-info {
		width: 200px;
	}
	}

	@media screen and (max-width: 480px) {
		#hero {
			padding: 16px;
		}

		h1 {
			font-size: 1.75rem;
		}

	.social-link,
	.social-info {
		width: 180px;
		padding: 10px 16px;
	}
	}
</style>
